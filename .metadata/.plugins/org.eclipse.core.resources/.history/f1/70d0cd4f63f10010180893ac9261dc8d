/* USER CODE BEGIN 4 */
void printu(const char *msg)
{
  HAL_UART_Transmit(
      &huart1,
      (uint8_t*)msg,
      strlen(msg),
      100
  );
}

// Print data in hex format
void print_hex(const uint8_t *data, uint8_t len)
{
  char hex[4];
  for(uint8_t i = 0; i < len; i++) {
    sprintf(hex, "%02X ", data[i]);
    printu(hex);
  }
}

// Check if data looks like a printable string
uint8_t is_printable_string(const uint8_t *data, uint8_t len)
{
  uint8_t printable_count = 0;
  for(uint8_t i = 0; i < len; i++) {
    if(data[i] >= 32 && data[i] <= 126) {
      printable_count++;
    }
  }
  return (printable_count * 100 / len) > 80;
}

void STM32_GetUID(uint32_t uid[3])
{
    uid[0] = *(uint32_t*)0x1FFFF7E8;
    uid[1] = *(uint32_t*)0x1FFFF7EC;
    uid[2] = *(uint32_t*)0x1FFFF7F0;
}

void print_reset_reason(void)
{
    uint32_t flags = RCC->CSR;
    if(flags & RCC_CSR_LPWRRSTF) {
        printu("Reset Reason: Low Power (Brown-out)\r\n");
    } else if(flags & RCC_CSR_WWDGRSTF) {
        printu("Reset Reason: Window Watchdog\r\n");
    } else if(flags & RCC_CSR_IWDGRSTF) {
        printu("Reset Reason: Independent Watchdog\r\n");
    } else if(flags & RCC_CSR_SFTRSTF) {
        printu("Reset Reason: Software Reset\r\n");
    } else if(flags & RCC_CSR_PORRSTF) {
        printu("Reset Reason: Power-on Reset\r\n");
    } else if(flags & RCC_CSR_PINRSTF) {
        printu("Reset Reason: External Pin Reset\r\n");
    } else {
        printu("Reset Reason: Unknown\r\n");
    }
    RCC->CSR |= RCC_CSR_RMVF;
}

void req_Registration(void)
{
    static uint8_t attempt = 0;
    char reg_payload[64];

    // Only try registration every few seconds to avoid flooding
    static uint32_t last_attempt = 0;
    uint32_t now = HAL_GetTick();

    if ((now - last_attempt) < 3000 && last_attempt != 0) {
        // Not time yet
        return;
    }

    last_attempt = now;

    // Perform CAD to check channel
    uint8_t cadResult = LoRa_performCAD(&myLoRa, 100);
    if(cadResult == 0)
    {
        // Channel is free - send registration request
        snprintf(reg_payload, sizeof(reg_payload), "%02d | %08lX-%08lX-%08lX | REQ_ADDRESS",
                nodeId, uid[0], uid[1], uid[2]);

        printu("Sending registration: ");
        printu(reg_payload);
        printu("\r\n");

        LoRa_transmit(&myLoRa, (uint8_t *)reg_payload, strlen(reg_payload), 200);

        // Wait a bit for transmission to complete
        HAL_Delay(500);

        // Now wait for ACK with increased timeout
        if(wait_for_ack(8000) != 0xFF) {
            // Registration successful!
            attempt = 0;
            return;
        } else {
            // Failed - increment attempt counter
            attempt++;
            if (attempt > 5) {
                printu("Registration failed after 5 attempts. Restarting...\r\n");
                attempt = 0;
                HAL_Delay(2000);
            }
        }
    }
    else
    {
        printu("Channel busy - skipping registration attempt\r\n");
        HAL_Delay(1000); // Wait before next attempt
    }
}

uint8_t wait_for_ack(uint16_t timeout_ms)
{
    printu("waiting for ack... \r\n");
    uint8_t rxBuf[128];
    uint32_t start = HAL_GetTick();

    // Clear IRQ flags first
    LoRa_write(&myLoRa, RegIrqFlags, 0xFF);

    LoRa_gotoMode(&myLoRa, STNBY_MODE);
    HAL_Delay(100);
    LoRa_startReceiving(&myLoRa);

    printu("receiving \r\n");

    while ((HAL_GetTick() - start) < timeout_ms)
    {
        // Check if packet received (poll IRQ flags)
        uint8_t irq = LoRa_read(&myLoRa, RegIrqFlags);

        // ❌ CRC error → discard packet
        if (irq & IRQ_PAYLOAD_CRCERR)
        {
            LoRa_write(&myLoRa, RegIrqFlags, 0xFF);
            LoRa_startReceiving(&myLoRa);
            continue;
        }

        // ❌ RX timeout → restart RX
        if (irq & IRQ_RX_TIMEOUT)
        {
            LoRa_write(&myLoRa, RegIrqFlags, 0xFF);
            LoRa_startReceiving(&myLoRa);
            continue;
        }

        // ✅ Valid RX
        if (irq & IRQ_RX_DONE)
        {
            uint8_t fifoAddr = LoRa_read(&myLoRa, RegFiFoRxCurrentAddr);
            LoRa_write(&myLoRa, RegFiFoAddPtr, fifoAddr);
            uint8_t len = LoRa_receive(&myLoRa, rxBuf, sizeof(rxBuf));

            LoRa_write(&myLoRa, RegIrqFlags, 0xFF);

            if (len > 0)
            {
                // Null terminate for string operations
                if (len < sizeof(rxBuf)) {
                    rxBuf[len] = '\0';
                } else {
                    rxBuf[sizeof(rxBuf) - 1] = '\0';
                }

                // Print what we received
                printu("RX: ");
                printu((char *)rxBuf);
                printu("\r\n");

                // Check if this is an ACK_ADDRESS packet (format: UID | assignedId | ACK_ADDRESS)
                char *ack_ptr = strstr((char *)rxBuf, "ACK_ADDRESS");
                if (ack_ptr != NULL)
                {
                    // This is an ACK packet - parse it
                    char buffer[128];
                    strncpy(buffer, (char *)rxBuf, sizeof(buffer)-1);
                    buffer[sizeof(buffer)-1] = '\0';

                    // Try different parsing methods

                    // Method 1: Use sscanf with full format
                    uint32_t r_uid0 = 0, r_uid1 = 0, r_uid2 = 0;
                    uint8_t assignedId = 0;
                    char cmd[32] = {0};

                    // Try parsing: "UID0-UID1-UID2 | assignedId | ACK_ADDRESS"
                    if (sscanf(buffer, "%8lX-%8lX-%8lX | %hhu | %31s",
                               &r_uid0, &r_uid1, &r_uid2, &assignedId, cmd) >= 4)
                    {
                        // Successfully parsed
                        char debug[128];
                        sprintf(debug, "Parsed ACK: uid0=%08lX, uid1=%08lX, uid2=%08lX, id=%d, cmd=%s\r\n",
                                r_uid0, r_uid1, r_uid2, assignedId, cmd);
                        printu(debug);

                        if (strcmp(cmd, "ACK_ADDRESS") == 0)
                        {
                            // Check if UID matches ours
                            if (r_uid0 == uid[0] && r_uid1 == uid[1] && r_uid2 == uid[2])
                            {
                                nodeId = assignedId;
                                printu("Node ID assigned: ");
                                char b[8];
                                sprintf(b, "%02d\r\n", nodeId);
                                printu(b);

                                LoRa_gotoMode(&myLoRa, STNBY_MODE);
                                HAL_Delay(10);

                                // Send confirmation back to master
                                LoRa_Transmit(Master, nodeId, "ACK_ADDRESS");
                                return nodeId;
                            }
                            else
                            {
                                printu("UID mismatch - not for us\r\n");
                            }
                        }
                    }
                    else
                    {
                        // Try alternative parsing if sscanf fails
                        printu("Trying alternative ACK parsing...\r\n");

                        // Look for UID pattern manually
                        char *uid_start = (char *)rxBuf;
                        char *pipe1 = strchr(uid_start, '|');
                        if (pipe1)
                        {
                            *pipe1 = '\0';  // Temporarily terminate at first pipe

                            // Parse UID (could be in format: UID0-UID1-UID2 or just UID0)
                            // For simplicity, just check if our UID string appears
                            char uid_str[64];
                            snprintf(uid_str, sizeof(uid_str), "%08lX-%08lX-%08lX",
                                     uid[0], uid[1], uid[2]);

                            if (strstr(uid_start, uid_str) != NULL)
                            {
                                // Our UID is in the packet
                                *pipe1 = '|';  // Restore the pipe

                                // Now parse assigned ID
                                char *pipe2 = strchr(pipe1 + 1, '|');
                                if (pipe2)
                                {
                                    // Extract assigned ID between the two pipes
                                    char id_str[8];
                                    strncpy(id_str, pipe1 + 2, sizeof(id_str)-1);
                                    id_str[sizeof(id_str)-1] = '\0';

                                    // Remove trailing spaces
                                    char *end = id_str + strlen(id_str) - 1;
                                    while (end > id_str && (*end == ' ' || *end == '\r' || *end == '\n')) {
                                        *end = '\0';
                                        end--;
                                    }

                                    assignedId = atoi(id_str);
                                    nodeId = assignedId;

                                    printu("Alternative parse - Node ID assigned: ");
                                    char b[8];
                                    sprintf(b, "%02d\r\n", nodeId);
                                    printu(b);

                                    LoRa_gotoMode(&myLoRa, STNBY_MODE);
                                    HAL_Delay(10);

                                    // Send confirmation back to master
                                    LoRa_Transmit(Master, nodeId, "ACK_ADDRESS");
                                    return nodeId;
                                }
                            }
                            else
                            {
                                *pipe1 = '|';  // Restore the pipe
                            }
                        }
                    }
                }
                // Check if this is a REQ_DATA packet (format: dst | src | REQ_DATA)
                else if (strstr((char *)rxBuf, "REQ_DATA") != NULL)
                {
                    // This is a REQ_DATA packet - ignore during registration
                    printu("Ignoring REQ_DATA during registration\r\n");

                    // Optionally parse it to see if it's for us
                    char *pipe = strchr((char *)rxBuf, '|');
                    if (pipe)
                    {
                        // Extract destination ID
                        char dst_str[8];
                        strncpy(dst_str, (char *)rxBuf, pipe - (char *)rxBuf);
                        dst_str[pipe - (char *)rxBuf] = '\0';

                        // Remove spaces
                        char *p = dst_str;
                        while (*p == ' ') p++;
                        char *end = p + strlen(p) - 1;
                        while (end > p && (*end == ' ' || *end == '\r' || *end == '\n')) {
                            *end = '\0';
                            end--;
                        }

                        uint8_t dst_id = atoi(p);

                        // Check if it's broadcast (0xFF) or for a specific node
                        if (dst_id == 0xFF || dst_id == nodeId) {
                            printu("REQ_DATA is for us (or broadcast)\r\n");
                        } else {
                            printu("REQ_DATA not for us\r\n");
                        }
                    }
                }
                else
                {
                    // Unknown packet type
                    printu("Unknown packet type during registration\r\n");

                    // Print hex for debugging
                    printu("HEX: ");
                    for (int i = 0; i < len && i < 40; i++) {
                        char hex[4];
                        sprintf(hex, "%02X ", rxBuf[i]);
                        printu(hex);
                    }
                    printu("\r\n");
                }

                // Restart receiving for next packet
                LoRa_startReceiving(&myLoRa);
            }
        }

        HAL_Delay(1);
    }

    printu("Timeout waiting for ACK\r\n");
    LoRa_gotoMode(&myLoRa, STNBY_MODE);
    return 0xFF;
}
uint8_t LoRa_Transmit(uint8_t dst, uint8_t src, const char *payload)
{
    char txBuf[64];

    snprintf(txBuf, sizeof(txBuf),
             "%02d | %02d | %s",
             dst,
             src,
             payload);
    printu("TX -> ");
    printu(txBuf);
    printu("\r\n");

    uint16_t tx = LoRa_transmit(
                    &myLoRa,
                    (uint8_t *)txBuf,
                    strlen(txBuf),
                    200
                  );
    if(tx==1)
    {
    	return 1;
    }
    else
    {
    	return 0;
    }
}

// NEW: Main polling function
void LoRa_StartPollingnode(void)
{
    static uint8_t isReceiving = 0;
    uint8_t rxBuf[128];

    // Only poll if we have a valid node ID
    if (nodeId == 0) {
        return; // Not registered yet
    }

    // Start receiving if not already
    if (!isReceiving) {
        LoRa_gotoMode(&myLoRa, STNBY_MODE);
        HAL_Delay(10);
        LoRa_startReceiving(&myLoRa);
        isReceiving = 1;
    }

    // Check if packet received (poll IRQ flags)
    uint8_t irq = LoRa_read(&myLoRa, RegIrqFlags);

    // ❌ CRC error → discard packet
    if (irq & IRQ_PAYLOAD_CRCERR)
    {
        LoRa_write(&myLoRa, RegIrqFlags, 0xFF);
        LoRa_startReceiving(&myLoRa);
        return;
    }

    // ❌ RX timeout → restart RX
    if (irq & IRQ_RX_TIMEOUT)
    {
        LoRa_write(&myLoRa, RegIrqFlags, 0xFF);
        LoRa_startReceiving(&myLoRa);
        return;
    }

    // ✅ Valid RX
    if (irq & IRQ_RX_DONE)
    {
        uint8_t fifoAddr = LoRa_read(&myLoRa, RegFiFoRxCurrentAddr);
        LoRa_write(&myLoRa, RegFiFoAddPtr, fifoAddr);
        uint8_t len = LoRa_receive(&myLoRa, rxBuf, sizeof(rxBuf));

        LoRa_write(&myLoRa, RegIrqFlags, 0xFF);

        if (len > 0 && len <= sizeof(rxBuf))
        {
            // Null terminate for string operations
            rxBuf[len] = '\0';

            // Debug print
            printu("Poll RX: ");
            printu((char *)rxBuf);
            printu("\r\n");

            // Check if packet contains REQ_DATA and is in format: %02d | %02d | payload
            char *req_data_ptr = strstr((char *)rxBuf, "REQ_DATA");

            if (req_data_ptr != NULL)
            {
                // Found "REQ_DATA" in packet
                // Now check if it's in the correct format and for us
                char buffer[128];
                strncpy(buffer, (char *)rxBuf, sizeof(buffer)-1);
                buffer[sizeof(buffer)-1] = '\0';

                // Parse format: "dst | src | REQ_DATA"
                uint8_t dst_id, src_id;
                char payload[64];

                // Try to parse using sscanf
                int parsed = sscanf(buffer, "%hhu | %hhu | %63[^\r\n]",
                                   &dst_id, &src_id, payload);

                if (parsed == 3)
                {
                    // Successfully parsed
                    // Check if destination is our node ID or broadcast (0xFF)
                    if (dst_id == nodeId || dst_id == 0xFF)
                    {
                        // Check if source is master (01) and payload is REQ_DATA
                        if (src_id == Master && strcmp(payload, "REQ_DATA") == 0)
                        {
                            printu("REQ_DATA from master received!\r\n");
                            handle_req_data(src_id);
                        }
                    }
                    else
                    {
                        printu("Packet not for us (dst=");
                        char msg[20];
                        sprintf(msg, "%02d, we=%02d)\r\n", dst_id, nodeId);
                        printu(msg);
                    }
                }
                else
                {
                    // Try alternative parsing with strtok
                    char *token;
                    char *rest = buffer;
                    int part = 0;
                    uint8_t parsed_dst = 0, parsed_src = 0;

                    token = strtok_r(rest, "|", &rest);
                    while (token != NULL && part < 3) {
                        // Trim whitespace
                        while (*token == ' ') token++;
                        char *end = token + strlen(token) - 1;
                        while (end > token && (*end == ' ' || *end == '\r' || *end == '\n')) {
                            *end = '\0';
                            end--;
                        }

                        if (part == 0) {
                            parsed_dst = atoi(token);
                        } else if (part == 1) {
                            parsed_src = atoi(token);
                        } else if (part == 2) {
                            // Check if this is REQ_DATA
                            if (strcmp(token, "REQ_DATA") == 0) {
                                if (parsed_dst == nodeId || parsed_dst == 0xFF) {
                                    if (parsed_src == Master) {
                                        printu("REQ_DATA from master (alt parse)\r\n");
                                        handle_req_data(parsed_src);
                                    }
                                }
                            }
                        }
                        part++;
                        token = strtok_r(rest, "|", &rest);
                    }
                }
            }
            else
            {
                printu("No REQ_DATA in packet\r\n");
            }
        }

        // Restart receiving for next packet
        LoRa_startReceiving(&myLoRa);
    }
}

// NEW: Handle REQ_DATA command from master
void handle_req_data(uint8_t src_id)
{
    printu("Processing REQ_DATA from master\r\n");

    // Example: Send sensor data back to master
    // You can modify this to send your actual data
    char sensor_data[64];

    // Example: Simulate some sensor reading
    uint16_t temperature = 25;  // Example temperature value
    uint16_t humidity = 60;     // Example humidity value

    // Format the data response
    snprintf(sensor_data, sizeof(sensor_data),
             "DATA_RESPONSE|TEMP=%d|HUM=%d|NODE=%02d",
             temperature, humidity, nodeId);

    // Send the data back to master
    LoRa_Transmit(src_id, nodeId, sensor_data);

    printu("Data sent to master\r\n");
}

void flush_rx()
{
    uint8_t tmp[128];
    while (LoRa_receive(&myLoRa, tmp, sizeof(tmp)) > 0) {
        HAL_Delay(2);
    }
}

/* USER CODE END 4 */

/**
  * @brief  This function is executed in case of error occurrence.
  * @retval None
  */
void Error_Handler(void)
{
  /* USER CODE BEGIN Error_Handler_Debug */
  __disable_irq();
  while (1)
  {
  }
  /* USER CODE END Error_Handler_Debug */
}

#ifdef USE_FULL_ASSERT
/**
  * @brief  Reports the name of the source file and the source line number
  *         where the assert_param error has occurred.
  * @param  file: pointer to the source file name

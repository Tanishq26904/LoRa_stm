/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */
#define FLASH_STORAGE_START  0x0800FC00  // Last 1KB of flash
#define FLASH_NEIGHBOR_START 0x0800F800  // Second last 1KB for neighbor info
#define FLASH_MAGIC_NUMBER   0x55AA1234
#define NEIGHBOR_MAGIC_NUM   0xAA551234

#define MESH_VERSION          0x01
#define PKT_REQ_ADDRESS       0x01
#define PKT_ACK_ADDRESS       0x02
#define PKT_REQ_DATA          0x03
#define PKT_SENSOR_DATA       0x04
#define PKT_ACK               0x05

#define DUP_CACHE_SIZE        16
#define DBG_BUF_SIZE          128
#define MAX_NEIGHBORS         4

#define USE_UART

typedef struct __attribute__((packed)) {
    uint32_t magic;          // Validation magic number
    uint32_t counter;        // Persistent counter (we store node id here)
    uint32_t device_id;      // Persistent device ID
    uint32_t checksum;       // Simple checksum
} stored_data_t;

typedef struct __attribute__((packed)) {
    uint32_t magic;          // Validation magic number
    uint8_t count;           // Number of neighbors stored
    uint8_t node_ids[MAX_NEIGHBORS];   // Node IDs
    int8_t rssi_values[MAX_NEIGHBORS]; // RSSI values (can be negative)
    uint32_t timestamps[MAX_NEIGHBORS]; // Last heard timestamps
    uint32_t checksum;       // Checksum for validation
} neighbor_storage_t;

typedef struct {
    uint8_t node_id;
    int8_t rssi;
    uint32_t last_heard;
} neighbor_info_t;

typedef struct __attribute__((packed)) {
  uint8_t  version;
  uint8_t  type;
  uint8_t  src;
  uint8_t  dest;
  uint8_t  ttl;
  uint8_t  flags;
  uint16_t msg_id;
  uint8_t payload_len;
} MeshHeader;

typedef struct {
  uint8_t src;
  uint16_t msg_id;
} SeenPacket;

/* USER CODE END PTD */

